{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@now/static-build" },
    { "src": "public/*", "use": "@now/static" },
    {
      "src": "src/server/index.js",
      "use": "@now/node",
      "config": { "maxLambdaSize": "40mb" }
    }
  ],
  "routes": [
    { "src": "/r/(.*)", "dest": "/src/server/index.js" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}
